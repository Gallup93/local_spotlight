
<section class="user-info">
  <h2>Hello, <%= current_user.username %></h2>
  <ul>
    <li>Your current zipcode: <%= current_user.zipcode %></li>
  </ul>
</section>

<section class="favorite-artists">
  <h2>Favroties:</h2>
  <ul>
    <% if @favorites == [] %>
      <li>No Favorite Artists... yet</li>
    <% else %>
      <% @favorites.each do |favorite| %>
      <div class= <%= "artist-#{favorite.artist_id}"%> >
        <% name = favorite.get_name_by_id(favorite.artist_id) %>
          <li> <%= link_to "#{name}", "/artists/#{favorite.artist_id}"%> </li>
        <% end %>
      <% end %>
      </div>
  </ul>
</section>
